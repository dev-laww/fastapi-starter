# Environment: development | production | testing
ENVIRONMENT=development

# Enable or disable debug mode
DEBUG=False

# Documentation settings
# Note: API documentation will only be enabled in non-production environments you can set ENABLE_API_DOCS to False to disable it even in non-production envs
ENABLE_API_DOCS=True
REDOC_URL=/redoc
DOCS_URL=/docs

# Application metadata
APP_NAME="Authentication Service"
APP_VERSION=1.0.0
APP_DESCRIPTION="Service for user authentication and management"
DEFAULT_API_VERSION=1.0.0

# Database connection URL (example for PostgreSQL)
# Format: postgresql+asyncpg://user:password@host:port/dbname
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/auth_db

# Database connection pool settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Secret key used for JWT token generation
JWT_SECRET=your_super_secret_jwt_key
